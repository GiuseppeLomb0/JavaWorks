import java.util.Scanner;
public class EsercitazioneIDE {
    static int a;
    static int b;
    static int c;
    static int d;
    public static void main (String[] args) {
    char ch1 = 'a';
    char ch2 = 'b';
    boolean boolvar;
    boolean exit = false;
    while (!exit) { //finchè variabile exit è true, staremo nel programma
        getValori();
        StampaIntestazione (ch1, ch2);
        System.out.println("calcoliamo la prima espressione:");
        boolvar = (a<b)&&(c<d);
        System.out.println("la prima variabile booleana fa:" + boolvar);
        boolvar = (a == b) || (c + 2 == d);
        System.out.println("(a == b) || (c + 2 == d):" + boolvar);
        boolvar = (ch1 >= ch2);
        System.out.println("(ch1 >= ch2):" + boolvar);
        System.out.println();
        System.out.println("vuoi fare un altra prova (yes =1 - no = 0) ?");
        Scanner scan = new Scanner(System.in);
        int ex= scan.nextInt();
        if (ex == 0) {
        exit = true;
        }
    }               
}
